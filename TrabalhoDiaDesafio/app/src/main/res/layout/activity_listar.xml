<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            style="@style/viewLineBlack" />

        <LinearLayout style="@style/layoutTableHeader">

            <TextView
                style="@style/textTableTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/nome" />

            <View style="@style/viewVertical" />

            <TextView
                style="@style/textTableTitle"
                android:layout_width="150dp"
                android:text="@string/nivel_de_atividade" />

        </LinearLayout>

        <View style="@style/viewLineBlack" />

        <ListView
            android:id="@+id/lvRegistros"
            style="@style/listView" />

        <View style="@style/viewLineBlack" />

    </LinearLayout>


</ScrollView>

